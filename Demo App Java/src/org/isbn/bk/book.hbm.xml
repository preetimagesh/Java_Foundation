<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="org.isbn.bk.Book" table="BOOK_DETAILS">
      <id name="bookId" type="int" column="Book_ID">
         <generator class="increment"/>
      </id>
      <property name="name" column="BOOK_NAME" type="string"/>
      <property name="publisher" column="Publisher" type="string"/>
      <property name="author" column="Author" type="string"/>
      <property name="price" column="Price" type="double"/>
      <property name="published" column="Published_Date" type="date"/>
      <property name="isbn" column="ISBN_NO" type="string"/>
     
   </class>
</hibernate-mapping>